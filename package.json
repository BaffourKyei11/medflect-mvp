{
  "name": "medflect-ai",
  "version": "1.0.0",
  "description": "Medflect AI - Smart Healthcare Platform powered by Groq",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "test": "jest",
    "test:liteLLM": "node test-liteLLM-integration.js",
    "test:security": "jest --testPathPattern=security",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "security:audit": "npm audit && npm run test:security"
  },
  "keywords": [
    "healthcare",
    "ai",
    "groq",
    "blockchain",
    "fhir",
    "pwa",
    "ghana",
    "africa"
  ],
  "author": "Medflect AI Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "pouchdb": "^7.3.1",
    "pouchdb-adapter-sqlite": "^1.0.0",
    "groq-sdk": "^0.3.0",
    "web3": "^4.2.2",
    "ethers": "^6.8.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "fhir-kit-client": "^1.0.0",
    "uuid": "^9.0.1",
    "crypto-js": "^4.1.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^3.0.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 