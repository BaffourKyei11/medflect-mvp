{
  "name": "medflect-ai",
  "version": "1.0.0",
  "description": "Medflect AI - Smart Healthcare Platform powered by Groq",
  "main": "packages/api/dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "cd packages/web && npm run dev",
    "dev:api": "cd packages/api && npm run dev",
    "build": "npm run build:web && npm run build:api",
    "build:web": "cd packages/web && npm run build",
    "build:api": "cd packages/api && npm run build",
    "install-all": "npm install && cd packages/web && npm install && cd ..\\api && npm install",
    "start": "cd packages/api && npm run start",
    "test": "jest",
    "test:liteLLM": "node test-liteLLM-integration.js",
    "test:security": "jest --testPathPattern=security",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "security:audit": "npm audit && npm run test:security"
  },
  "keywords": [
    "healthcare",
    "ai",
    "groq",
    "blockchain",
    "fhir",
    "pwa",
    "ghana",
    "africa"
  ],
  "author": "Medflect AI Team",
  "license": "MIT",
  "dependencies": {
    "@react-navigation/native-stack": "^7.3.24",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "expo-secure-store": "^14.2.3",
    "express": "^5.1.0",
    "fhir-kit-client": "^1.9.2",
    "groq-sdk": "^0.30.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "rate-limiter-flexible": "^7.2.0",
    "react-native": "^0.80.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "web3": "^4.16.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vite-plugin-pwa": "^1.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": "https://github.com/BaffourKyei11/medflect-mvp.git"
}
