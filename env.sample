# Core
NODE_ENV=development
PORT=3001
DATABASE_URL=./data/medflect.db

# CORS
CORS_ORIGIN=*

# Groq / LiteLLM
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=groq/deepseek-r1-distill-llama-70b
GROQ_BASE_URL=http://91.108.112.45:4000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Timeouts & Circuit Breaker
REQUEST_TIMEOUT_MS=30000
HEADERS_TIMEOUT_MS=35000
AI_UPSTREAM_TIMEOUT_MS=20000
CB_FAILURE_THRESHOLD=5
CB_RESET_MS=30000

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=medflect123
# Alternatively, use a single URL
# REDIS_URL=redis://:medflect123@localhost:6379

# Blockchain (optional, disabled by default)
# Local dev example:
# EVM_RPC_URL=http://127.0.0.1:8545
# EVM_PRIVATE_KEY=0x<your-dev-private-key>
# ACCESS_LOG_ADDRESS=0x<address-from-blockchain/build/AccessLog.json>
# CONSENT_TOKEN_ADDRESS=0x<address-from-blockchain/build/ConsentToken.json>
# BLOCKCHAIN_SALT=<random-hex-32-bytes>
DISABLE_BLOCKCHAIN=true

# JWT
JWT_SECRET=your_super_secret_jwt_key_here

# Hospital Configuration
HOSPITAL_ID=37_military_hospital
HOSPITAL_NAME=37 Military Hospital
HOSPITAL_LOCATION=Accra, Ghana

# Feature flags
MOCK_AI=false
SERVE_WEB_DIST=false
